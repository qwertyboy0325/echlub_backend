  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "build": "rimraf dist && tsc",
    "test": "jest --config=jest.config.js",
    "test:auth": "jest src/modules/auth/__tests__",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "ts-node src/tests/collaboration/e2e/load-test.ts",
    "test:collaboration": "jest src/tests/collaboration",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/$(date +%s) -d src/config/database.ts",
    "migrate:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:reset": "ts-node src/scripts/init-db.ts --reset"
  },
  "keywords": [],
  "author": "",
  "type": "commonjs",
